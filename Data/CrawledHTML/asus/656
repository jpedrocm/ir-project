  <script>
    window.ASUSInit = function () { asus_api.init({ appkey: 'event00000', lang: 'vn', api_background: 'simple_black', api_layout: '1' }); };
    (function (d) {
        var js, id = 'asus-jsapi';
        if (d.getElementById("asus-jsapi")) { return; }
        js = d.createElement('script');
        js.id = id;
        js.async = true;
        js.src = "//www.asus.com/API/js/asus_api.js";
        d.getElementsByTagName('head')[0].appendChild(js);
    }(document));


    var appid = 'event00000';
    window.asusapi = window.asusapi || {};

    asusapi.member = {

        login: function (url) {
            if ($("#api_login")[0]) { $("#api_login").submit(); return; }
            url = url ? url : window.location.href;
            $("body").append('<form id="api_login" method="post" action="https://account.asus.com/signin.aspx" style="display:none"><input type="hidden" name="AppID" value="' + appid + '"><input type="hidden" name="ReturnUrl" value="' + url + '"></form>');
            $("#api_login").submit();
            return false;
        }
    };

    if (window.location.href.indexOf('index.aspx') == '-1') {
        window.location.href = "index.aspx";
    }

    
    $('#Button1').on('click', function () {
        asusapi.member.login("http://www.asus.com/vn/event/2015/LCD-Promotion/RegProduct.aspx");
        return false;
    })
    
    
    $('.loginaccount').on('click',function(){
        if ($("#api_login")[0]){ $("#api_login").submit(); return; }
        var  url = window.location.href;
        jQuery("body").append('<form id="api_login" method="post" action="https://account.asus.com/signin.aspx" style="display:none"><input type="hidden" name="AppID" value="'+appid+'"><input type="hidden"  name="ReturnUrl" value="'+url+'"></form>');
        jQuery("#api_login").submit();
        return false;
    });
</script>   
